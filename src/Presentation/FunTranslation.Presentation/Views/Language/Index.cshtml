@model IEnumerable<Language>

@{
    ViewData["Title"] = "Index";
}

<h3>Language List</h3>

<div class="container mt-3">
    <a  asp-controller="Language" asp-action="Create" class="btn btn-primary">Create </a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td><a asp-controller="Language" asp-action="Delete" asp-route-id="@item.Id"> Delete </a></td>
                    <td><a asp-controller="Language" asp-action="Update" asp-route-id="@item.Id"> Update </a></td>
                </tr>
            }
            
        </tbody>
    </table>
</div>
